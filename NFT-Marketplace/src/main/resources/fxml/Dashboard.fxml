<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.esprit.controllers.DashboardController"
            prefHeight="400.0" prefWidth="600.0">
            
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" 
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" 
          AnchorPane.rightAnchor="0">
          
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" 
              text="NFT Marketplace Dashboard"/>
              
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="blogsButton" text="Manage Blogs" 
                    onAction="#handleBlogsButton"
                    style="-fx-font-size: 16px; -fx-min-width: 150px; -fx-min-height: 50px;"/>
                    
            <Button fx:id="profilesButton" text="Manage Profiles" 
                    onAction="#handleProfilesButton"
                    style="-fx-font-size: 16px; -fx-min-width: 150px; -fx-min-height: 50px;"/>
        </HBox>
        
        <Button fx:id="logoutButton" text="Logout" 
                onAction="#handleLogout"
                style="-fx-font-size: 14px;"/>
    </VBox>
</AnchorPane>
