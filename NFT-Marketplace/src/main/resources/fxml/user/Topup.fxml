<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.esprit.controllers.user.TopupController"
      spacing="20" alignment="CENTER" styleClass="form-container">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <Label text="Request Balance Top-Up" styleClass="form-title"/>
    
    <HBox alignment="CENTER" spacing="10">
        <Label text="Current Balance:" />
        <Label fx:id="currentBalanceLabel" text="0.000 ETH" style="-fx-font-weight: bold;"/>
    </HBox>
    
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        
        <Label text="Request Amount (ETH):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="amountField" promptText="Enter amount in ETH" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field"/>
        
        <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="paymentMethodCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                 prefWidth="200"/>
        
        <Label text="Transaction ID:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="transactionIdField" promptText="Enter transaction ID if available" 
                  GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>
        
        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
        <TextArea fx:id="notesTextArea" promptText="Enter additional information about your payment" 
                 GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="100" styleClass="form-field"/>
                 
        <Label fx:id="errorLabel" text="" textFill="red" 
              GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Submit Request" onAction="#handleSubmitRequest" styleClass="form-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="form-button"/>
    </HBox>
    
    <TitledPane text="Previous Top-up Requests" expanded="false">
        <TableView fx:id="requestsTableView" prefHeight="200">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
                <TableColumn fx:id="paymentMethodColumn" text="Payment Method" prefWidth="150"/>
            </columns>
        </TableView>
    </TitledPane>
</VBox>