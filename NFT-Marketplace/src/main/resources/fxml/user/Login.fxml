<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.esprit.controllers.user.LoginController"
      spacing="20" alignment="CENTER" styleClass="form-container">
      
    <Label text="Login to NFT Marketplace" styleClass="form-title"/>
    
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter your email" 
                  GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field"/>
        
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field"/>
                      
        <Label fx:id="errorLabel" text="" textFill="red" 
              GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" onAction="#handleLogin" styleClass="form-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="form-button"/>
    </HBox>
    
    <Hyperlink text="Don't have an account? Register here" onAction="#handleRegisterLink"/>
</VBox>