<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>
<VBox alignment="CENTER" spacing="10" 
	xmlns="http://javafx.com/javafx/11.0.1" 
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.esprit.controllers.GitHubOAuthController">
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
	<Label fx:id="statusLabel" text="Connecting to GitHub..." styleClass="status-label" />
	<ProgressIndicator fx:id="progressIndicator" />
	<WebView fx:id="webView" prefHeight="500.0" prefWidth="800.0" VBox.vgrow="ALWAYS" />
	<Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
</VBox>