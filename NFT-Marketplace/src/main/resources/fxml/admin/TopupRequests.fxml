<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.esprit.controllers.user.TopupRequestsController"
      spacing="10" styleClass="table-container">
    
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <Label text="Manage Top-up Requests" styleClass="form-title"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="statusFilterCombo" promptText="Filter by Status" prefWidth="200"/>
        <Button text="Apply Filter" onAction="#handleApplyFilter"/>
        <Button text="Clear Filter" onAction="#handleClearFilter"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="totalRequestsLabel" text="Total Requests: 0"/>
    </HBox>
    
    <TableView fx:id="requestsTableView" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="userColumn" text="User" prefWidth="150"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
            <TableColumn fx:id="paymentMethodColumn" text="Payment Method" prefWidth="150"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>
    
    <VBox fx:id="requestDetailPane" visible="false" spacing="15">
        <padding><Insets top="20" right="0" bottom="0" left="0"/></padding>
        
        <Label text="Top-up Request Details" styleClass="form-title"/>
        
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            
            <Label text="Request ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="requestIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="form-field"/>
            
            <Label text="User:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="userField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field"/>
            
            <Label text="Current Balance:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="currentBalanceField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>
            
            <Label text="Requested Amount:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="amountField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-field"/>
            
            <Label text="Payment Method:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="paymentMethodField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="form-field"/>
            
            <Label text="Transaction ID:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="transactionIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="form-field"/>
            
            <Label text="Request Date:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="dateField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" styleClass="form-field"/>
            
            <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.valignment="TOP"/>
            <TextArea fx:id="notesTextArea" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7" prefHeight="100" styleClass="form-field"/>
            
            <Label text="Admin Notes:" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.valignment="TOP"/>
            <TextArea fx:id="adminNotesTextArea" promptText="Enter notes about this request" 
                     GridPane.columnIndex="1" GridPane.rowIndex="8" prefHeight="100" styleClass="form-field"/>
            
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <TextField fx:id="statusField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="9" styleClass="form-field"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="approveButton" text="Approve Request" onAction="#handleApproveRequest" 
                   styleClass="form-button" style="-fx-background-color: #27ae60;"/>
            <Button fx:id="rejectButton" text="Reject Request" onAction="#handleRejectRequest" 
                   styleClass="form-button" style="-fx-background-color: #e74c3c;"/>
            <Button text="Close" onAction="#handleCloseDetails" styleClass="form-button"/>
        </HBox>
    </VBox>
</VBox>